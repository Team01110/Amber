<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.search.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edtContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/bc_edt_search"
            android:hint="@string/search"
            android:padding="12dp"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icClear"
            android:layout_marginEnd="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            app:layout_constraintBottom_toBottomOf="@+id/edtSearch"
            app:layout_constraintTop_toTopOf="@+id/edtSearch"
            app:layout_constraintEnd_toEndOf="@+id/edtSearch" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvCountResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="found_50_results"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/edtContainer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tvCountResult"
        app:spanCount="2"
        tools:listitem="@layout/item_home_rv" />

</androidx.constraintlayout.widget.ConstraintLayout>